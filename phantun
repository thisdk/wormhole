FROM alpine:latest

ARG PHANTUN_VERSION="0.6.0"

ARG PHANTUN_URL="https://github.com/dndx/phantun/releases/download/v${PHANTUN_VERSION}/phantun_x86_64-unknown-linux-gnu.zip"

RUN apk add --no-cache unzip

RUN wget -O phantun.zip ${PHANTUN_URL} && unzip phantun.zip phantun_server -d /tmp/ && /tmp/phantun_server -v && mv -f /tmp/phantun_server /usr/bin/phantun && rm -f phantun.zip

RUN apk del unzip

ENTRYPOINT ["RUST_LOG=info phantun"]
